<!-- This is a primitive example showing the different types of preferences available. -->
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
  
	<PreferenceCategory
    	android:title="@string/general_settings">
    	
    	<CheckBoxPreference
        	android:key="enable_sms_sync_preference"
       		android:title="@string/chk_enable_sms_sync"
          	android:summary="@string/chk_sms_sync_hint" />
		
		<EditTextPreference
    		android:key="website_preference"
   			android:title="@string/edittxt_website_pref"
      		android:summary="@string/edittxt_website_pref_summary"
      		android:dialogTitle="@string/edittxt_website_pref_dialog_title" />
        
        <EditTextPreference
    		android:key="api_key_preference"
   			android:title="@string/edittxt_api_key_pref"
      		android:summary="@string/edittxt_api_key_pref_summary"
      		android:dialogTitle="@string/edittxt_api_key_pref" />
          	
        <EditTextPreference
    		android:key="keyword_preference"
   			android:title="@string/edittxt_keyword_pref"
      		android:summary="@string/editxt_keyword_pref_summary"
      		android:dialogTitle="@string/edittxt_keyword_pref"
      		android:hint="@string/edittxt_keyword_hint" />
          	
  	</PreferenceCategory>
  	<PreferenceCategory
    	android:title="@string/optional_settings">
    	
    	<CheckBoxPreference
        	android:key="enable_mms_sync_preference"
       		android:title="@string/chk_enable_mms_sync"
          	android:summary="@string/chk_mms_sync_hint" />
	  	
	  	<CheckBoxPreference
        	android:key="enable_gps_sync_preference"
       		android:title="@string/chk_enable_gps_sync"
          	android:summary="@string/chk_gps_sync_hint" />
	  	
  	</PreferenceCategory>
  	<Preference android:key="powered_preference"
    	android:title="@string/app_name"
      	android:summary="@string/powered_by"/>
</PreferenceScreen>
