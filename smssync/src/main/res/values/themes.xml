<resources>
    <style name="AppTheme.Base" parent="@style/Theme.AppCompat">
        <item name="colorControlHighlight">?colorAccent</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="actionModeBackground">@color/color_accent</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_smssync</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent.SmsSync</item>

        <item name="android:listChoiceIndicatorSingle">@color/status_done</item>
        <item name="android:textColor">@color/text_light</item>
        <!-- setup text color of checkbox text field-->
        <item name="android:checkboxStyle">@style/CheckBox.Text</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="actionModeStyle">@style/AppTheme.SmsSync.ActionMode</item>
        <item name="android:actionModeStyle">@style/AppTheme.SmsSync.ActionMode</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">?colorAccent</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent.SmsSync</item>

        <item name="android:listChoiceIndicatorSingle">@color/status_done</item>
        <item name="android:textColor">@color/text_light</item>
        <!-- setup text color of checkbox text field-->
        <item name="android:checkboxStyle">@style/CheckBox.Text</item>
        <item name="actionModeBackground">@android:color/background_dark</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="actionModeStyle">@style/AppTheme.SmsSync.ActionMode</item>
        <item name="android:actionModeStyle">@style/AppTheme.SmsSync.ActionMode</item>
    </style>

</resources>