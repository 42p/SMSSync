<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".LogActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ok]"
        android:id="@+id/data_connection_status"
        android:paddingBottom="10dp"
        android:layout_alignBottom="@+id/data_connection"
        android:layout_alignParentRight="true"/>
    <TextView
            android:id="@+id/phone_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="+819094220927 - status"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:id="@+id/data_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data connection"
            android:paddingBottom="10dp"
            android:layout_below="@+id/phone_status_label"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Battery level"
            android:id="@+id/battery_level"
            android:paddingBottom="10dp"
            android:layout_below="@+id/data_connection"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/battery_level_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="[ 80% ]"
            android:paddingBottom="10dp"
            android:layout_alignTop="@+id/battery_level"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Can ping server"
            android:paddingBottom="10dp"
            android:id="@+id/ping_server"
            android:layout_above="@+id/server_properly_configured"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="[ Yes ]"
            android:paddingBottom="10dp"
            android:id="@+id/can_ping_server_label"
            android:layout_below="@+id/battery_level"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Server properly configured"
            android:id="@+id/server_properly_configured"
            android:layout_below="@+id/can_ping_server_label"
            android:paddingBottom="10dip"
            android:layout_alignRight="@+id/textView6"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="[ yes ]"
            android:id="@+id/server_properly_configured_label"
            android:layout_below="@+id/can_ping_server_label"
            android:paddingBottom="20dip"
            android:layout_alignParentRight="true"/>
    <TextView
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/server_properly_configured_label"
            android:background="?android:attr/listDivider"/>
</RelativeLayout>
