<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:background="?attr/selectableItemBackground">
    <TextView
            android:id="@+id/status_indicator"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:layout_alignTop="@+id/message_from"
            android:layout_alignBottom="@+id/sent_message_status"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/message_from"
            style="@style/TextView.Description"
            android:layout_width="wrap_content"
            android:text="09393929299s9s"
            android:lines="1"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/status_indicator"
            android:layout_toEndOf="@+id/status_indicator"/>

    <TextView
            android:id="@+id/message_date"
            style="@style/TextView.Description"
            android:layout_width="wrap_content"
            android:text="Apri, 2015 at 2pm"
            android:lines="1"
            android:textColor="@color/grey_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:id="@+id/message"
            style="@style/TextView.Description"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Sample text messages comes here"
            android:layout_below="@+id/message_date"
            android:layout_toEndOf="@+id/status_indicator"
            android:layout_toRightOf="@+id/status_indicator"/>

    <TextView
            android:id="@+id/sent_message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:padding="3dp"
            android:text="Task"
            android:textIsSelectable="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/status_indicator"
            android:layout_toEndOf="@+id/status_indicator"/>

    <TextView
            android:id="@+id/sent_message_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/message"
            android:ellipsize="end"
            android:lines="1"
            android:padding="3dp"
            android:text="FAILED"
            android:textIsSelectable="true"/>
</RelativeLayout>